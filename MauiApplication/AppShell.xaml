<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:viewsPages="clr-namespace:MauiApplication.Views.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate viewsPages:MainPage}"
        Route="MainPage" />


    <ShellItem Title="Contacts">
        <ShellContent ContentTemplate="{DataTemplate viewsPages:ContactsPage}" Route="ContactsPage" />
    </ShellItem>
    
    <ShellItem Title="Persons">
        <ShellContent ContentTemplate="{DataTemplate viewsPages:PersonsPage}" Route="PersonsPage" />
    </ShellItem>

    <ShellItem Title="Products">
        <ShellContent ContentTemplate="{DataTemplate viewsPages:ProductsPage}" Route="ProductsPage" />
    </ShellItem>

    <ShellItem Title="Departments">
        <ShellContent ContentTemplate="{DataTemplate viewsPages:DepartmentsPage}" Route="DepartmentsPage" />
    </ShellItem>

</Shell>
